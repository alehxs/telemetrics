# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# FastF1 API Configuration
# Ergast API deprecated (end of 2024) - use Jolpica-F1 replacement
# Set to 'true' to use Jolpica-F1 API, 'false' to use original Ergast (may fail)
USE_JOLPICA_F1_API=true

# Django Configuration
DJANGO_SECRET_KEY=generate-a-new-secret-key-here
DJANGO_DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite
